<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_venue_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="Match No. Venue"
            android:textSize="10sp"
            android:textColor="#333333"
            app:layout_constraintBottom_toTopOf="@+id/team_a_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/team_a_tv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Team A"
            android:textSize="15sp"
            android:textColor="#673AB7"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_venue_tv"
            app:layout_constraintBottom_toTopOf="@+id/vs_tv"/>

        <TextView
            android:id="@+id/vs_tv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            android:text=""

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/time_tv"
            app:layout_constraintTop_toBottomOf="@+id/team_a_tv"
            app:layout_constraintBottom_toTopOf="@id/team_b_tv"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            android:gravity="center_horizontal"
            android:text="Time"
            android:textColor="@android:color/black"

            app:layout_constraintStart_toEndOf="@+id/vs_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team_a_tv"
            app:layout_constraintBottom_toTopOf="@id/team_b_tv" />

        <TextView
            android:id="@+id/team_b_tv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Team B"
            android:textColor="#673AB7"
            android:textSize="15sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vs_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>