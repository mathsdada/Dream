<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/match_title_tv"
        android:gravity="center"
        android:text="T20 . 32nd Match. Mumbai"
        android:textSize="12sp"
        android:textColor="#70ffffff"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/team_one_tv"
        android:text="India"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:gravity="center|left"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/match_time_tv"
        app:layout_constraintTop_toBottomOf="@id/match_title_tv"
        app:layout_constraintBottom_toTopOf="@id/team_two_tv"/>
    <TextView
        android:id="@+id/team_two_tv"
        android:text="Pakistan"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:gravity="center|left"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/match_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/team_one_tv"
        app:layout_constraintBottom_toTopOf="@id/series_title_tv"/>
    <TextView
        android:id="@+id/match_time_tv"
        android:text="5:00 AM"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/match_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/series_title_tv"/>
    <TextView
        android:id="@+id/series_title_tv"
        android:gravity="center|right"
        android:text="ICC T20 World Cup, 2020"
        android:textSize="12sp"
        android:textColor="#70ffffff"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_two_tv"
        app:layout_constraintBottom_toTopOf="@id/dummy_view"/>
    <View
        android:id="@+id/dummy_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/series_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</android.support.constraint.ConstraintLayout>