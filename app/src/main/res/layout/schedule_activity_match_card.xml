<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/match_format_tv"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="O\nD\nI"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/match_title_tv"
            android:gravity="center"
            android:text="32nd Match. Mumbai"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toEndOf="@id/match_format_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/team_one_tv"
            android:text="India"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/match_format_tv"
            app:layout_constraintEnd_toStartOf="@id/match_time_tv"
            app:layout_constraintTop_toBottomOf="@id/match_title_tv"
            />
        <TextView
            android:id="@+id/team_two_tv"
            android:text="Pakistan"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/match_format_tv"
            app:layout_constraintEnd_toStartOf="@id/match_time_tv"
            app:layout_constraintTop_toBottomOf="@+id/team_one_tv"/>
        <TextView
            android:id="@+id/match_time_tv"
            android:text="5:00 AM"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/match_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>